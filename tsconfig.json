{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": false,
        "strict": true,
        "target": "es6",
        "types": ["node"]
    },
    "exclude": ["node_modules"],
    "files": ["./hardhat.config.ts", "hardhat.helpers.ts"],
    "include": [
        "scripts/**/*.ts",
        "config/**/*.ts",
        "utils/**/*.ts",
        "tasks/**/*.ts",
        "test/**/*.ts",
        "typechain/**/*.d.ts",
        "typechain/**/*.ts",
        "hardhat.helpers.ts",
        "typescript-defs/**/*.d.ts"
    ]
}
